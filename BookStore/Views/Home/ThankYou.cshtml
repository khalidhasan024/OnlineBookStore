@model BookStore.Models.ViewModels.OrderViewModel
@{
    ViewData["Title"] = "ThankYou";
    var counter = 1;
    double total = 0;
}

<br />
<h3 class="text-primary">Thank you, @Model.Order.Name</h3>
<br />

<h5 class="alert alert-success">
    Hopefully, Our delivery man will knock your door soon with your favorite books.
    Please pay the bill to the delivery man.
    Thank you for your kind help and staying with us. Have a nice day!!!
</h5>

<br />

<h4>Items You have ordered</h4>
<table class="table table-striped table-sm">
    <thead class="table-dark">
        <tr>
            <th>Serial No</th>
            <th>Product</th>
            <th>Details</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bookOrder in Model.BookOrders)
        {
            <tr>
                <td>@counter</td>
                <td>
                    <h5>@bookOrder.Book.Title</h5>
                </td>
                <td>Author: @bookOrder.Book.Author.Name</td>
                <td> &#2547; @bookOrder.Book.Price</td>
            </tr>
            counter++;
            total += bookOrder.Book.Price;
        }
        <tr class="bg-dark text-white">
            <td></td>
            <td></td>
            <td>Total</td>
            <td colspan="2"> &#2547; @total</td>
        </tr>
    </tbody>
</table>

<h5 class="alert alert-danger">Your Total payable is &#2547; @total . </h5>