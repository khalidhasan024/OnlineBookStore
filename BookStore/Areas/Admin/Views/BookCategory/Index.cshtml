@model IEnumerable<BookStore.Models.BookCategory>
@{
    ViewData["Title"] = "Index";
}

<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info ">Book Categories</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> New Book Categoty</a>
    </div>
</div>

<div >
    <table class="table table-sm table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.CategoryName)
            </th>
            <th></th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(m => item.CategoryName)
                    </a>
                </td>

                <partial name="_TableButtonPartial" model="item.Id" />
            </tr>
        }
    </table>
</div>

